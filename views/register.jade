extends layout

block content
  .container.col-lg-12.registerlayo
    h1 Register
    p Please register using the form below
    ul.errors
      if errors
        each error, i in errors
          li.alert.alert-danger #{error.msg}
    form(method='post', action='register',enctype='multipart/form-data')
      .form-group
        label Name
          input.form-control(name='name', type='text', placeholder='Enter a name')
      .form-group
        label Email
          input.form-control(name='email', type='email', placeholder='Enter Email')
      .form-group
        label Username
          input.form-control(name='username', type='text', placeholder='Username')
      .form-group
        label Password
          input.form-control(name='password', type='password', placeholder='Enter Password')
      .form-group
        label Confirm Passowrd
          input.form-control(name='password2', type='password', placeholder='Confirm')
      .form-group
        label Profile Image
          input.form-control(name='profileimage', type='file')
      input.btn.btn-default(name='submit', type='submit', value='Register') 